@page "/kalkV2Short"
<h2>Základní matematické operace</h2>
<hr />
<label>Číslo 1: <input @bind="cislo1" /></label>
<br />
<label>Číslo 2: <input @bind="cislo2" /></label>

<div class="m-3">
    <button class="btn" @onclick="Soucet" style="width:130px">Součet (+)</button>
    <button class="btn btn-primary" style="width:130px" @onclick="Rozdil">Rozdíl (-)</button>
    <button class="btn btn-secondary" style="width:130px" @onclick="Soucin">Součin (*)</button>
    <button class="btn btn-success" style="width:130px" @onclick="Podil">Podíl (/)</button>
</div>
<div>
    <label>Výsledek <input @bind="vysledek" readonly /></label>
</div>
<label><input type="checkbox" @bind-value="kontrolaPreteceni"/> Kontrola přetečení</label>

@code {
    short cislo1;//podjhk
    short cislo2;
    short vysledek;
    bool kontrolaPreteceni = false;
    /// <summary>
    /// Soucet 2 promenych
    /// </summary>
    private void Soucet()
    {
        if (kontrolaPreteceni)
        {
            checked
            {
                vysledek = (short)(cislo1 + cislo2);
            }
        }
        else
        {
            vysledek = (short)(cislo1 + cislo2);
        }
    }
    /// <summary>
    /// Rozdíl  2 čísel
    /// </summary>
    private void Rozdil()
    {
        vysledek = (short)(cislo1 - cislo2);
    }

    /// <summary>
    /// Součin  2 čísel
    /// </summary>
    private void Soucin()
    {
        vysledek = (short)(cislo1 * cislo2);
    }

    /// <summary>
    /// Podíl  2 čísel
    /// </summary>
    private void Podil()
    {
        vysledek = (short)(cislo1 / cislo2);
    }
}
